# Steam Bridge Optimized Configuration
# Copy these settings to your main .env file for immediate improvements

# === LOG SPAM REDUCTION ===
STEAM_QUIET_LOGS=1
LOG_LEVEL=info
LOG_RATE_LIMIT=60000
LOG_BATCH_TIMEOUT=5000

# === PERFORMANCE OPTIMIZATIONS ===
# Presence Tracking
PRESENCE_CHECK_INTERVAL=120000
PRESENCE_MAX_REQUESTS=25
PRESENCE_BATCH_SIZE=5

# Task Processing  
TASK_POLL_INTERVAL=10000
TASK_CIRCUIT_BREAKER_THRESHOLD=3
TASK_MAX_CONCURRENT=2

# Health Monitoring
HEALTH_CHECK_INTERVAL=300000
HEARTBEAT_INTERVAL=60000

# === MEMORY OPTIMIZATION ===
MEMORY_THRESHOLD_MB=256

# === QUICK INVITES ===
QI_POOL_TARGET=2
QI_POOL_MIN=1
QI_ENSURE_INTERVAL=60000

# === DATABASE ===
DB_TIMEOUT=15000
DB_VERBOSE=0

# === DEVELOPMENT MODE (uncomment for debugging) ===
# NODE_ENV=development
# LOG_LEVEL=debug
# STEAM_QUIET_LOGS=0